<% provide(:title, "Connexion") %>
<h1>Connexion</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "email" , class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "mot de passe" class: 'form-control' %>

      <div class="form-check">
        <%= f.label :remember_me, class: "form-check-label" do %>
        <%= f.check_box :remember_me, class: 'form-check-input' %>
          <span>se souvenir de moi</span>
        <% end %>
      </div>
      <%= f.submit "Connexion", class: "btn btn-primary" %>
    <% end %>

    <p>Nouveau au club ? <%= link_to "S'inscrire", signup_path %></p>
  </div>
</div>